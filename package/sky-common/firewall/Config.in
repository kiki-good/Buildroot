config BR2_PACKAGE_SKY_FIREWALL
	bool "Firewall"
	default N
	help
	  Enables the firewall on the STB.


config BR2_PACKAGE_SKY_FIREWALL_TURN_ON_TEXT
	bool "Turn on Firewall script text"
	depends on BR2_PACKAGE_SKY_FIREWALL
	default y
	help
	  This allows turning script text off in prod variant.

config BR2_PACKAGE_SKY_FIREWALL_ENABLE_LOGS
	bool "Turn on Firewall logs"
	depends on BR2_PACKAGE_SKY_FIREWALL
	default y
	help
	  This option enables the logs for the firewall.

config BR2_PACKAGE_SKY_FIREWALL_PROC_SYS
	bool "Use /proc/sys/net to lock down networking"
	depends on BR2_PACKAGE_SKY_FIREWALL
	default y
	help
	  When selected the firewall initialisation.
	  script will use the available /proc/sys/net 
	  interfaces to secure networking features
	  

config BR2_PACKAGE_SKY_FIREWALL_ALLOW_HTTP
	bool "Allow HTTP requests/replies"
	depends on BR2_PACKAGE_SKY_FIREWALL
	default y
	help
	  When selected allows HTTP requests from the STB and their
	  responses.

config BR2_PACKAGE_SKY_FIREWALL_ALLOW_DHCP
	bool "Allow DHCP requests/replies"
