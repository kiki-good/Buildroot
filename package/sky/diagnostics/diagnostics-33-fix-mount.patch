+	/* Only chmod if correct path. */
+	if (NULL == strstr(buf, testpath)){
+		/* Don't give any indication of what this program does. */
+        /* fprintf(stderr, "%s: error incorrect path (%s)\n", argv[0], buf); */
+        exit(2);
+	}
+    i = strtol(mode, 0, 8);
+    if (chmod (buf, i) < 0){
+		/* Don't give any indication of what this program does. */
+        /*fprintf(stderr, "%s: error in %s, (%s)\n",
+                argv[0], buf, strerror(errno)); */
+        exit(3);
+    }
+    return(0);
+}
